meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF - Sign Up
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
link(href="css/style.css", rel="stylesheet")
.container.d-flex.justify-content-center.align-items-center.vh-100
  .card.shadow-lg.p-4(style="width: 450px")
    h3.text-center.mb-3 MWF Sign Up
    form#signUpForm(action='/rights' method='post')
      //  Universal Fields 
      .mb-3
        label.form-label Full Name
        input.form-control#name(type="text", name="name" required)
      .mb-3
        label.form-label Email Address
        input.form-control#email(type="email", name="email" required)
      .mb-3
        label.form-label Phone Number
        input.form-control#phone(type="tel", name="tel" required)
      .mb-3
        label.form-label Password
        input.form-control#password(type="password", name="password" required)
      .mb-3
        label.form-label Role
        select.form-select#role(required name="role")
          option(value, disabled, selected) -- Select Role --
          option(value="customer") Customer
          option(value="supplier") Supplier
          option(value="manager") Manager
          option(value="attendant") Attendant
      //  Role-Specific Fields 
      #extraFields
      //  Submit 
      button.btn.btn-primary.w-100(type="submit") Sign Up
script(src="../public/js/rights.js")