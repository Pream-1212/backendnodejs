doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF Forms
  // Bootstrap CDN
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='css/style1.css' rel='stylesheet')
header
nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    // Brand
    a.navbar-brand(href='#') FORMS

    // Toggler button
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon

    // Navbar items
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item
          a.nav-link(href='/manager') Manager
        li.nav-item
          a.nav-link(href='/salesAgent') Sales Agent
        li.nav-item
          a.nav-link(href='/stock') Stock
h2.gim Mayondo Wood &amp; Furniture (MWF) Forms
// Sales Agent Registration
form(action='/salesAgent' method='post')
  .form-wrapper
    .form-container
      h2 Sales Agent Registration
      .mb-3
        label.form-label(for='managerName') Full Name
        input#managerName.form-control(type='text' name='name' placeholder='Enter your full name')
      .mb-3
        label.form-label Phone Number
        input#agentPhone.form-control(type='text' required='')
      .mb-3
        label.form-label Password
        input#agentPassword.form-control(type='password' required='')
      button.btn.btn-success(type='submit') Register Agent
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js')
script(src='about.js')
